# ==========================================
# PeopleHub Backend - Environment Variables
# ==========================================
# Copy this file to .env and update the values

# === APP CONFIG ===
APP_NAME="PeopleHub"
NODE_ENV="development"  # development | production
PORT="3001"             # Local: 3001, Railway: 8080

# === URLs ===
APP_URL="http://localhost:5173"           # Frontend URL for email links
FRONTEND_URL="http://localhost:5173"      # CORS allowed origin

# === DATABASE (PostgreSQL) ===
# Local:
DATABASE_URL="postgresql://postgres:password@localhost:5432/peoplehub"
# Railway (use internal URL):
# DATABASE_URL="postgresql://postgres:xxx@postgres.railway.internal:5432/railway"

# === JWT AUTHENTICATION ===
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="1d"
JWT_REFRESH_EXPIRES_IN="7d"

# === REDIS (for caching & rate limiting) ===
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_USERNAME="default"
REDIS_PASSWORD="your-redis-password"
REDIS_PREFIX="hr:"

# === EMAIL (Resend) ===
# Get API key from https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxx"

# === FILE STORAGE (DigitalOcean Spaces / S3) ===
S3_ENDPOINT="https://sgp1.digitaloceanspaces.com"
S3_REGION="sgp1"
S3_BUCKET="your-bucket-name"
S3_CDN_URL="https://your-bucket.sgp1.digitaloceanspaces.com"
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"

# === MICROSOFT 365 (Azure AD Graph API) ===
M365_TENANT_ID="your-tenant-id"
M365_CLIENT_ID="your-client-id"
M365_CLIENT_SECRET="your-client-secret"

# ==========================================
# PRODUCTION VALUES (Railway)
# ==========================================
# NODE_ENV="production"
# PORT="8080"
# APP_URL="https://your-frontend.vercel.app"
# FRONTEND_URL="https://your-frontend.vercel.app"
# DATABASE_URL="postgresql://postgres:xxx@postgres.railway.internal:5432/railway"
